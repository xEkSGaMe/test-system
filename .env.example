# test-system/.env.example

# ============================================
# БАЗОВЫЕ НАСТРОЙКИ
# ============================================

# Режим работы (development/production)
NODE_ENV=development

# ============================================
# НАСТРОЙКИ БАЗ ДАННЫХ
# ============================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=test_system
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
DATABASE_URL=postgresql://admin:admin123@postgres:5432/test_system

# MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=test_system
MONGO_USER=admin
MONGO_PASSWORD=admin123
MONGO_URL=mongodb://admin:admin123@mongodb:27017/test_system?authSource=admin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# ============================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ============================================

# JWT (Используй: openssl rand -base64 32)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production_12345
JWT_ACCESS_TOKEN_EXPIRE=15m     # 15 минут
JWT_REFRESH_TOKEN_EXPIRE=7d     # 7 дней

# Cookie настройки
COOKIE_SECRET=your_cookie_secret_change_this_12345
COOKIE_MAX_AGE=604800000        # 7 дней в миллисекундах

# ============================================
# OAuth ПРОВАЙДЕРЫ
# ============================================

# GitHub OAuth
# Зарегистрируйте приложение: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:8081/auth/github/callback

# Yandex OAuth
# Зарегистрируйте приложение: https://oauth.yandex.ru/client/new
YANDEX_CLIENT_ID=your_yandex_client_id_here
YANDEX_CLIENT_SECRET=your_yandex_client_secret_here
YANDEX_CALLBACK_URL=http://localhost:8081/auth/yandex/callback

# Google OAuth (опционально)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_CALLBACK_URL=http://localhost:8081/auth/google/callback

# ============================================
# TELEGRAM БОТ
# ============================================

# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# НАСТРОЙКИ СЕРВИСОВ
# ============================================

# Auth Service (Go)
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=8081
AUTH_SERVICE_URL=http://auth-service:8081

# Core Service (C++)
CORE_SERVICE_HOST=core-service
CORE_SERVICE_PORT=8082
CORE_SERVICE_URL=http://core-service:8082

# Web Client
WEB_CLIENT_HOST=web-client
WEB_CLIENT_PORT=3000
WEB_CLIENT_URL=http://localhost:3000

# Telegram Bot
TELEGRAM_BOT_WEBHOOK_URL=https://your-domain.com/webhook

# ============================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================

# Лимиты
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15
MAX_SESSIONS_PER_USER=10

# Тестирование
DEFAULT_TEST_TIME_LIMIT=60     # минут
DEFAULT_MAX_ATTEMPTS=3

# ============================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# ============================================

LOG_LEVEL=info                 # debug, info, warn, error
LOG_FORMAT=json               # json, text
LOG_FILE=logs/app.log

# ============================================
# НАСТРОЙКИ ДЛЯ РАЗРАБОТКИ
# ============================================

# Отладочные флаги
DEBUG=true
CORS_ORIGIN=http://localhost:3000

# ============================================
# КОНЕЦ ФАЙЛА .env.example
# ============================================

# ИНСТРУКЦИЯ:
# 1. Скопируй этот файл: cp .env.example .env
# 2. Заполни все поля со значением "your_..._here"
# 3. Для генерации JWT_SECRET_KEY: openssl rand -base64 32
# 4. Для получения Telegram токена: напиши @BotFather в Telegram